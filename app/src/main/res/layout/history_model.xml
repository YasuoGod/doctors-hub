<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20sp"
    android:paddingBottom="20sp"
    android:background="@drawable/layout_bg_white">

    <ImageView
        android:id="@+id/historyImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_doctor_logo"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="25sp"/>

    <TextView
        android:id="@+id/historyNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/historyImageView"
        android:text="Name"
        android:textSize="25sp"
        android:fontFamily="@font/ubuntu_regular"
        android:paddingLeft="25sp"
        android:layout_marginTop="10sp"/>

    <TextView
        android:id="@+id/historyDetailsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/historyNameView"
        android:layout_toRightOf="@+id/historyImageView"
        android:text="Details"
        android:fontFamily="@font/ubuntu_regular"
        android:textColor="@color/lightBlue"
        android:layout_marginTop="10sp"
        android:paddingLeft="30sp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/historyDateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/historyNameView"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:layout_marginTop="10sp"
        android:paddingRight="30sp"
        android:text="Date"
        android:textColor="@android:color/holo_green_dark"
        android:fontFamily="@font/ubuntu_regular"
        android:textSize="25sp"/>

</RelativeLayout>
